<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="is-size-2 center-text">
    Edit Post
  </h2>
  <form class="edit-post-form box">
    <div>
      <label for="post-title" class="label">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" />
      <span>({{format_url post.post_url}})</span>
      {{!-- <span>{{ post.category }}</span> --}}
    </div>
    <div>
      <label for="post-text" class="label">Body</label>
      <input name="post-text" type="text" value="{{post.text}}" />
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-primary">Save post</button>
    <button type="button" class="delete-post-btn btn is-primary">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="button is-primary">Add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>