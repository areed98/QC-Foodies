
<section class="section is-flex">
    <div class="container is-flex-grow-0">
        <form class="box login-form">
            <div class="is-size-2">
                Log In
            </div>
            <div class="field">
            <label for="email-login">Email:</label>
            <input class="input" type="text" id="email-login" />
            </div>

            <div class="field">
                <label for="password-login label">Password:</label>
                <input class="input" type="password" id="password-login" />
            </div>
            <div class="buttons">
                <button type="submit" id="loginButton" class="button is-primary">Login</button>
            </div>
        </form>
    </div>
</section>

<section class="section is-flex">
    <div class="container is-flex-grow-0">
        <form class="signup-form box">
            <div class="is-size-2">
                Sign Up
            </div>
            <div class="field">
                <label class="label" for="username-signup">Username:</label>
                <input class="input" type="text" id="username-signup" />
            </div>
            <div class="field">
                <label class="label" for="email-signup">Email:</label>
                <input class="input" type="text" id="email-signup" />
            </div>
            <div class="field">
                <label class="label" for="password-signup">Password:</label>
                <input class="input" type="password" id="password-signup" />
            </div>
            <div>
                <button type="submit" id="signupButton" class="button is-primary">Signup</button>
            </div>
        </form>
    </div>
</section>

<script src="/javascript/login.js"></script>