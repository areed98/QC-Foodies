<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" type="image/x-icon" href="images/QCfoodiesLogo.png" />
  <title>QC Foodies</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://code.jquery.com/jquery.js"></script>
</head>

<body>
    <div id="mainWrapper" class="mt-4 mr-6 ml-6">

    <header class="mb-6">
        <div class="navbar-brand">
            <nav class="navbar" role="navigation" aria-label="main navigation">
                <a class="navbar-item" href="/">
                    <img src="images/QCfoodiesLogo.png" alt="QCFoodies Logo" width="100" height="100">
                </a>

{{!-- Drop Down Nav Bar --}}
            {{!-- <select role="button" class="navbar-burger ua inverted dropdown box"  id="mainCategories">
                <option class="foods" value="recipes">Recipes</option>
                <option class="foods" value="restaurants">Restaurants</option>
                <option class="foods" value="bars-breweries">Bars/Breweries</option>
                <option class="foods" value="drinks">Drinks</option>
            </select> --}}

{{!-- Profile and Log Out  --}}
            </div>
                <div id="navbarMenu" class="navbar-menu">
                    <div class="navbar-start">
                        <div class="navbar-item">
                            <div class="buttons are-medium">
                                <a class="button is-primary" href="/">
                                    Home
                                </a>
                            </div>
                        </div>
                        <div class="navbar-item">
                            <div class="buttons are-medium">
                                <a class="button is-primary" href="/dashboard">
                                    My Profile
                                </a>
                            </div>
                        </div>
                    </div>

                    {{!-- LogIn/LogOut/Sign Up Btn --}}
                    <div class="navbar-end">
                        <div class="navbar-item">
                            {{#if loggedIn}}
                            <div class="buttons">
                            <button id="logout" class="button is-primary">Log Out</button>
                            {{else}}
                            <a href="/login" class="button is-primary">Log In/Sign Up</a>
                            {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main>
            <section class="section" id="mainContent">

                {{!-- Search Bar --}}
                <div id="searchBar" class="container mb-6">
                    <div class="field is grouped is-grouped-multiline" id="mainCategories">
                        <div class="field has-addons is-justify-content-center">
                            <div class="control is-expanded">
                                <input class="input form-control" type="text" placeholder="Search" id="searchBar">
                            </div>
                            <div class="control">
                                <button type="submit" class="button is-primary search-btn">Search</button>
                            </div>
                        </div>
                        <div class="field is-horizontal is-justify-content-center">
                            {{!-- Recipes Btn --}}
                            <p class="control is-flex-grow-1">
                                <a class="button is-fullwidth food" value="recipes" href="/categories/recipes">
                                    Recipes
                                </a>
                            </p>
                            {{!-- Restaurant Btn  --}}
                            <p class="control is-flex-grow-1">
                                <a class="button is-fullwidth food" value="restaurants" href="/categories/restaurants">
                                    Restaurants
                                </a>
                            </p>
                            {{!-- Bars/Breweries Btn --}}
                            <p class="control is-flex-grow-1">
                                <a class="button is-fullwidth food" value="bars-breweries" href="/categories/bars-breweries">
                                    Bars/Breweries
                                </a>
                            </p>
                            {{!-- Drinks Btn  --}}
                            <p class="control is-flex-grow-1">
                                <a class="button is-fullwidth food" value="drinks" href="/categories/drinks">
                                    Drinks
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
      {{{ body }}}
    </main>

    <footer>
      Thanks for visiting!
    </footer>
  </div>
  
  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}
  <script src="/javascript/search.js"></script>
  <script src="/javascript/category.js"></script>
</body>

</html>